<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<zk xmlns:n="native">
	<window id="winP2kbe04" border="normal" width="80%"
		viewModel="@id('vm') @init('com.sds.hakli.viewmodel.P2kbE04Vm')"
		validationMessages="@id('vmsgs')">
		<caption>
			<n:i class="fas fa-edit"></n:i>
			<n:span>Borang Pengisian</n:span>
		</caption>
		<groupbox mold="3d" closable="false"
			form="@id('e') @load(vm.objForm) @save(vm.objForm, before='doSave')
			@validator(vm.validator) ">
			<caption label="@load(e.mp2kbkegiatan.kegiatan)" />
			<grid>
				<columns>
					<column width="30%" />
					<column />
				</columns>
				<rows>
					<row>
						<label value="Nama Institusi" />
						<vlayout>
							<textbox value="@bind(e.institusi)" hflex="1"
								maxlength="70" />
							<label style="color:gray"
								value="@load(vmsgs['institusi'])" />
						</vlayout>
					</row>
					<row>
						<label value="Status Penguji" />
						<vlayout>
							<radiogroup
								selectedItem="@bind(e.statuspenguji)">
								<radio label="Penguji Utama" value="Penguji Utama" />
								<radio label="Penguji Kedua dst" value="Penguji Kedua dst" />
							</radiogroup>
							<label style="color:gray"
								value="@load(vmsgs['statuspenguji'])" />
						</vlayout>
					</row>
					<row>
						<label value="Jenjang" />
						<vlayout>
							<radiogroup
								selectedItem="@bind(e.jenjang)">
								<radio label="DIII" value="DIII" />
								<radio label="DIV / S1" value="DIV / S1" />
								<radio label="S2" value="S2" />
							</radiogroup>
							<label style="color:gray"
								value="@load(vmsgs['jenjang'])" />
						</vlayout>
					</row>
					<row>
						<label value="Dokumen Bukti Kegiatan" />
						<vlayout>
							<hlayout>
								<button sclass="btn btn-info btn-sm"
									label="Browse..." upload="true,maxsize=1000"
									onUpload="@command('doUpload', upEvent=event)"
									autodisable="self" />
								<separator orient="vertical" />
								<label value="@load(vm.docfilename)" />
							</hlayout>
							<label style="color:gray"
								value="@load(vmsgs['media'])" />
						</vlayout>
					</row>
					<row>
						<label value="Tanggal Kegiatan" />
						<vlayout>
							<datebox value="@bind(e.tglkegiatan)"
								format="dd-MM-yyyy" maxlength="10" cols="12" />
							<label style="color:gray"
								value="@load(vmsgs['tglkegiatan'])" />
						</vlayout>
					</row>
				</rows>
				<foot>
					<footer />
					<footer>
						<button id="btSave" width="100%"
							iconSclass="z-icon-save" label="Simpan" autodisable="self"
							sclass="btn btn-primary btn-sm" onClick="@command('doSave')" />
					</footer>
				</foot>
			</grid>
		</groupbox>
		<separator />
		<groupbox mold="3d" closable="false">
			<caption label="Keterangan Parameter Penilaian" />
			<grid>
				<columns>
					<column label="Parameter" />
					<column label="Nilai SKP" align="right" />
				</columns>
				<rows>
					<row>
						<label value="Nilai SKP yang dimiliki kegiatan ini adalah" />
						<label value="1 SKP" />
					</row>
				</rows>
			</grid>
		</groupbox>
	</window>
</zk>